<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="585.0" prefWidth="567.0" spacing="20" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="HangmanController">

    <Label style="-fx-font-size: 40px; -fx-font-weight: bold;" text="Hangman Game" />
    <Label fx:id="wordLabel" style="-fx-font-size: 25px;" text="_____" />
    <TextField fx:id="guessField" maxWidth="50" promptText="Guess a letter" />
    <Button fx:id="guessButton" onAction="#handleGuess" text="Guess" />
    <Label fx:id="incorrectGuessesLabel" text="Incorrect guesses: " />
    <Label fx:id="attemptsLeftLabel" text="Attempts left: 6" />
    
    <Canvas fx:id="hangmanCanvas" height="200" width="200" />
</VBox>
